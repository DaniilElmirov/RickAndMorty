<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_10">

        <ImageView
            android:id="@+id/character_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            tools:src="@drawable/img" />


        <TextView
            android:id="@+id/title_character_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="@dimen/margin_4"
            android:text="@string/title_name"
            app:layout_constraintEnd_toStartOf="@id/character_name"

            app:layout_constraintStart_toEndOf="@id/character_image"

            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/character_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="@dimen/margin_4"
            app:layout_constraintBottom_toBottomOf="@id/title_character_name"
            app:layout_constraintStart_toEndOf="@id/title_character_name"

            app:layout_constraintTop_toTopOf="@id/title_character_name"

            tools:text="Rick and morty" />


        <TextView
            android:id="@+id/title_character_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="@dimen/margin_4"
            android:layout_marginTop="@dimen/margin_4"
            android:text="@string/title_status"

            app:layout_constraintEnd_toStartOf="@+id/character_status"

            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toEndOf="@+id/character_image"

            app:layout_constraintTop_toBottomOf="@+id/title_character_gender" />

        <TextView
            android:id="@+id/character_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="@dimen/margin_4"
            app:layout_constraintBottom_toBottomOf="@id/title_character_status"
            app:layout_constraintStart_toEndOf="@id/title_character_status"

            app:layout_constraintTop_toTopOf="@id/title_character_status"

            tools:text="Dead" />


        <TextView
            android:id="@+id/title_character_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="@dimen/margin_4"
            android:layout_marginTop="@dimen/margin_4"
            android:text="@string/title_gender"

            app:layout_constraintEnd_toStartOf="@+id/character_gender"
            app:layout_constraintStart_toEndOf="@id/character_image"

            app:layout_constraintTop_toBottomOf="@id/title_character_name" />

        <TextView
            android:id="@+id/character_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="@dimen/margin_4"
            app:layout_constraintBottom_toBottomOf="@id/title_character_gender"
            app:layout_constraintStart_toEndOf="@id/title_character_gender"

            app:layout_constraintTop_toTopOf="@id/title_character_gender"

            tools:text="Male" />


        <TextView
            android:id="@+id/title_character_origin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="@dimen/margin_4"
            android:layout_marginTop="@dimen/margin_4"
            android:text="@string/title_origin"

            app:layout_constraintEnd_toStartOf="@+id/character_origin"

            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toEndOf="@id/character_image"

            app:layout_constraintTop_toBottomOf="@id/title_character_status" />

        <TextView
            android:id="@+id/character_origin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="@dimen/margin_4"
            app:layout_constraintBottom_toBottomOf="@id/title_character_origin"
            app:layout_constraintHorizontal_chainStyle="packed"

            app:layout_constraintStart_toEndOf="@id/title_character_origin"
            app:layout_constraintTop_toTopOf="@id/title_character_origin"

            tools:text="Earth" />


        <TextView
            android:id="@+id/title_character_species"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="@dimen/margin_4"
            android:layout_marginTop="@dimen/margin_20"
            android:text="@string/title_species"

            app:layout_constraintEnd_toStartOf="@+id/character_species"
            app:layout_constraintStart_toEndOf="@id/character_image"

            app:layout_constraintTop_toBottomOf="@id/title_character_origin" />

        <TextView
            android:id="@+id/character_species"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="@dimen/margin_4"
            app:layout_constraintBottom_toBottomOf="@id/title_character_species"
            app:layout_constraintStart_toEndOf="@id/title_character_species"

            app:layout_constraintTop_toTopOf="@id/title_character_species"

            tools:text="Human" />


        <TextView
            android:id="@+id/title_character_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="@dimen/margin_4"
            android:layout_marginTop="@dimen/margin_4"
            android:text="@string/title_type"

            app:layout_constraintEnd_toStartOf="@id/character_type"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toEndOf="@id/character_image"

            app:layout_constraintTop_toBottomOf="@id/title_character_species" />

        <TextView
            android:id="@+id/character_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="@dimen/margin_4"
            app:layout_constraintBottom_toBottomOf="@id/title_character_type"
            app:layout_constraintStart_toEndOf="@id/title_character_type"

            app:layout_constraintTop_toTopOf="@id/title_character_type"

            tools:text="Genetic experiment" />


        <TextView
            android:id="@+id/title_character_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="@dimen/margin_4"
            android:layout_marginTop="@dimen/margin_20"
            android:text="@string/title_location"

            app:layout_constraintEnd_toStartOf="@+id/character_location"
            app:layout_constraintStart_toEndOf="@id/character_image"

            app:layout_constraintTop_toBottomOf="@id/title_character_type" />

        <TextView
            android:id="@+id/character_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="@dimen/margin_4"
            app:layout_constraintBottom_toBottomOf="@id/title_character_location"
            app:layout_constraintStart_toEndOf="@id/title_character_location"

            app:layout_constraintTop_toTopOf="@id/title_character_location"

            tools:text="Earth" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>